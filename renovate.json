{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["npm"],
  "timezone": "Asia/Shanghai",
  "schedule": ["before 8am on Sunday"],

  "packageRules": [
