{
  "name": "Marszy's blog",
  "author": "Marszy",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "prebuild": "node scripts/gen-rss.mjs",
    "postbuild": "next-sitemap --config ./scripts/next-sitemap.config.js",
    "prod": "pnpm prebuild && pnpm build && pnpm postbuild",
    "prepare": "husky install"
  },
  "dependencies": {
    "autoprefixer": "^10.4.15",
    "gray-matter": "^4.0.3",
    "next": "^14.0.0",
    "next-sitemap": "^4.2.2",
    "nextra": "4.2.17",
    "nextra-theme-blog": "4.2.17",
    "postcss": "^8.4.27",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.0.0",
    "rss": "^1.2.2",
    "sharp": "^0.33.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@next/env": "^14.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "9.23.0",
    "eslint-config-next": "15.2.3",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "5.2.3",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,tsx}": [
      "eslint --cache --fix --cache-location './node_modules/@eslint/.eslintcache/'"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.6.5"
}